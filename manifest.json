{

	"manifest_version": 2,
	"name": "Kuribo",
	"version": "1.0",

	"description": "I'm fooling around here",

	"icons": {
		"48": "icons/kuribo-48.png"
	},

	"permissions": [
		"*://localhost/*"	
	],

	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"css": ["kuribo.css"],
			"js": ["kuribo.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}